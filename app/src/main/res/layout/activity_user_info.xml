<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_white_1000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_60sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/profile"/>

                <com.waltado.lynknow.customViews.LatoFontHeavyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Three Steps Away From Lynking"
                    android:textColor="@color/appThemeColorDark"
                    android:textSize="@dimen/_14sdp"
                    android:layout_margin="@dimen/_5sdp" />

            </LinearLayout>

            <com.waltado.lynknow.customViews.LatoFontLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You look Good. Let others know about it"
                android:textColor="@color/appThemeColorDark"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:padding="@dimen/_10sdp"/>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="@dimen/_2sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardBackgroundColor="@color/md_white_1000">


                <RelativeLayout
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_camera"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"/>

                    <ImageView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/profile"
                        android:layout_centerInParent="true"/>

                    <com.waltado.lynknow.customViews.LatoFontLightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/md_grey_700"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="TAP TO UPLOAD"/>


                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="@dimen/_2sdp"
                app:cardElevation="@dimen/_2sdp"
                android:background="@color/md_white_1000">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/md_white_1000"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_quote_inverted"/>

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:adjustViewBounds="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_quote"/>

                    <com.waltado.lynknow.customViews.LatoFontLightTextView
                        android:id="@+id/yourself_character_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:text="140/140"
                        android:textColor="@color/appThemeColorDark"
                        android:textSize="@dimen/_11sdp"/>

                    <com.waltado.lynknow.customViews.LatoFontEditText
                        android:id="@+id/edittext_yourself"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:hint="Describe Yourself..."
                        android:maxLength="140"
                        android:textSize="@dimen/_12sdp"
                        android:textColorHint="@color/appThemeColor"
                        android:textColor="@color/appThemeColorDark"
                        android:background="@android:color/transparent"
                        />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="@dimen/_2sdp"
                app:cardElevation="@dimen/_2sdp"
                android:background="@color/md_white_1000">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/md_white_1000"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_cake"
                        android:layout_centerVertical="true"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <com.waltado.lynknow.customViews.LatoFontEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/appThemeColorDark"
                            android:hint="DD"
                            android:textStyle="italic"
                            android:textColorHint="@color/appThemeColor"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:digits="0123456789"
                            android:inputType="phone"
                            android:maxLength="2"
                            android:textSize="@dimen/_13sdp"/>

                        <com.waltado.lynknow.customViews.LatoFontEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/appThemeColorDark"
                            android:hint="MM"
                            android:digits="0123456789"
                            android:inputType="phone"
                            android:maxLength="2"
                            android:textStyle="italic"
                            android:textColorHint="@color/appThemeColor"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:textSize="@dimen/_13sdp"/>


                        <com.waltado.lynknow.customViews.LatoFontEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/appThemeColorDark"
                            android:hint="YYYY"
                            android:digits="0123456789"
                            android:inputType="phone"
                            android:maxLength="4"
                            android:textStyle="italic"
                            android:textColorHint="@color/appThemeColor"
                            android:textSize="@dimen/_13sdp"/>


                    </LinearLayout>



                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="@dimen/_2sdp"
                app:cardElevation="@dimen/_2sdp"
                android:background="@color/md_white_1000">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/md_white_1000"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_location"
                        android:layout_centerVertical="true"
                        />

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/homeTownView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Hometown"
                        android:textColor="@color/appThemeColorDark"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        />



                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="@dimen/_2sdp"
                app:cardElevation="@dimen/_2sdp"
                android:background="@color/md_white_1000">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/md_white_1000"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_man_walking"
                        android:layout_centerVertical="true"
                        />

                    <com.waltado.lynknow.customViews.LatoFontLightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="@color/appThemeColorDark"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"/>



                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/forward_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/_15sdp"
        app:backgroundTint="@color/appThemeColorDark"
        android:src="@drawable/ic_arrow_forward_white" />

</android.support.design.widget.CoordinatorLayout>
