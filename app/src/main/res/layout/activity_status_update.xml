<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/md_grey_50">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

    <com.waltado.lynknow.customViews.LatoFontHeavyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/md_grey_800"
        android:text="Status"
        android:textSize="@dimen/_12sdp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="@dimen/_2sdp"
            android:background="@color/md_white_1000">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@color/md_white_1000"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_quote"/>

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:adjustViewBounds="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_quote"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_edit_black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:hint="Update Status..."
                    android:textSize="@dimen/_12sdp"
                    android:textColorHint="@color/appThemeColor"
                    android:textColor="@color/appThemeColorDark"
                    android:background="@android:color/transparent"
                    android:textStyle="italic"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <com.waltado.lynknow.customViews.LatoFontHeavyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:text="Currently Doing"
            android:textSize="@dimen/_12sdp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="@dimen/_2sdp"
            android:background="@color/md_white_1000">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@color/md_white_1000"
                android:padding="@dimen/_5sdp">

                <HorizontalScrollView
                    android:id="@+id/currently_doing_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_70sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/computer"
                            android:layout_marginRight="@dimen/_10sdp"/>

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/computer"
                            android:layout_marginRight="@dimen/_10sdp"/>

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/computer"
                            android:layout_marginRight="@dimen/_10sdp"/>

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/computer"
                            android:layout_marginRight="@dimen/_10sdp"/>


                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/computer"
                            android:layout_marginRight="@dimen/_10sdp"/>




                    </LinearLayout>

                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/right_arrow_currently_doing"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right_grey"
                    android:layout_alignParentRight="true"
                    />

                <ImageView
                    android:id="@+id/left_arrow_currently_doing"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_left_grey"
                    android:layout_alignParentLeft="true"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <com.waltado.lynknow.customViews.LatoFontHeavyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:text="Where"
            android:textSize="@dimen/_12sdp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="@dimen/_2sdp"
            android:background="@color/md_white_1000">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@color/md_white_1000"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_location"
                    android:layout_centerVertical="true"
                    />

                <com.waltado.lynknow.customViews.LatoFontLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mumbai, Maharashtra, India"
                    android:textColor="@color/md_grey_700"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"/>



            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <com.waltado.lynknow.customViews.LatoFontHeavyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:text="Mood"
            android:textSize="@dimen/_12sdp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="@dimen/_2sdp"
            android:background="@color/md_white_1000">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@color/md_white_1000"
                android:padding="@dimen/_5sdp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/mood_viewpager"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_height="@dimen/_70sdp"/>

                <ImageView
                    android:id="@+id/right_arrow_mood"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right_grey"
                    android:layout_alignParentRight="true"
                    />

                <ImageView
                    android:id="@+id/left_arrow_mood"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_left_grey"
                    android:layout_alignParentLeft="true"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    </ScrollView>

</LinearLayout>
