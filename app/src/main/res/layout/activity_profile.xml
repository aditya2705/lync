<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_255sdp"
                android:orientation="vertical"
                android:background="@drawable/abstract_img">

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:src="@drawable/profile"
                        app:civ_border_width="@dimen/_5sdp"
                        app:civ_border_color="@color/appThemeColor"
                        android:layout_centerHorizontal="true"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circular_fill_1"
                        android:gravity="center"
                        android:layout_alignRight="@+id/icon"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:layout_width="@dimen/_27sdp"
                            android:layout_height="@dimen/_27sdp"
                            android:text="86%"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/md_white_1000"
                            android:gravity="center"
                            android:background="@drawable/circular_fill_2"/>

                    </RelativeLayout>


                </RelativeLayout>

                <com.waltado.lynknow.customViews.LatoFontLightTextView
                    android:id="@+id/profile_person_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/md_white_1000"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Aditya Rathi"
                    android:textSize="@dimen/_15sdp"/>

                <com.waltado.lynknow.customViews.LatoFontHeavyTextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/md_white_1000"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:text="Dinner at Aer Lounge"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"/>

                <com.waltado.lynknow.customViews.LatoFontLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/md_white_1000"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:text="14 minutes ago"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11sdp"/>

                <com.ogaclejapan.smarttablayout.SmartTabLayout
                    android:id="@+id/profile_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    app:stl_defaultTabTextColor="@color/white"
                    app:stl_distributeEvenly="true"
                    app:stl_indicatorAlwaysInCenter="false"
                    app:stl_dividerThickness="0dp"
                    app:stl_defaultTabTextSize="@dimen/_8sdp"
                    app:stl_indicatorColor="#4486d0"
                    app:stl_indicatorCornerRadius="@dimen/_5sdp"
                    app:stl_indicatorInterpolation="smart"
                    app:stl_indicatorThickness="@dimen/_3sdp"
                    app:stl_indicatorGravity="bottom"
                    app:stl_underlineColor="@android:color/transparent"/>

            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"/>



        </LinearLayout>


    </ScrollView>


</LinearLayout>
