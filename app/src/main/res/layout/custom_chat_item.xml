<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/dicaprio"
        app:civ_border_width="@dimen/_3sdp"
        app:civ_border_color="@color/appThemeColor"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_5sdp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:layout_height="@dimen/_60sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.waltado.lynknow.customViews.LatoFontHeavyTextView
                android:id="@+id/contact_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leonardo DiCaprio"
                android:singleLine="true"
                android:maxWidth="@dimen/_150sdp"
                android:textColor="@color/md_grey_800"
                android:textSize="@dimen/_12sdp"/>

            <com.waltado.lynknow.customViews.LatoFontLightTextView
                android:id="@+id/contact_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Lorem ipsum Dolor sit Oscar goes to"
                android:singleLine="true"
                android:maxWidth="@dimen/_150sdp"
                android:textColor="@color/md_grey_900"
                android:textSize="@dimen/_10sdp"/>

        </LinearLayout>


        <com.waltado.lynknow.customViews.LatoFontLightTextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.30 PM"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/md_grey_600"
            android:textSize="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/message_badge"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_19sdp"
            android:text="11"
            android:layout_marginBottom="@dimen/_2sdp"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/md_white_1000"
            android:gravity="center"
            android:background="@drawable/circular_fill_1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>
