<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waltado.lynknow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SelectActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.LynkingActivity" />
        <activity android:name=".activities.LynkingCategoriesActivity" />
        <activity android:name=".activities.UserInfoActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.StatusUpdateActivity"/>
    </application>

</manifest>